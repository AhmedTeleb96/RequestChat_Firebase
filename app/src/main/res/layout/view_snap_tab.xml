<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_gravity="bottom"
    android:background="@color/bg_foshia"
    >

<ImageView
    android:id="@+id/viewSnap_center_image"
    android:layout_width="88dp"
    android:layout_height="88dp"
    android:layout_gravity="bottom|center"
    android:src="@drawable/big_circle"
    android:layout_marginBottom="96dp"
    />

    <ImageView
        android:id="@+id/viewSnap_start_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start|bottom"
        android:src="@drawable/ic_chat_24dp"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="24dp"
        />

    <ImageView
        android:id="@+id/viewSnap_end_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_story_24dp"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="24dp"
        />
    <ImageView
        android:id="@+id/viewSnap_bottom_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center|bottom"
        android:src="@drawable/small_circle"
        android:layout_marginBottom="48dp"
        />
    <View
        android:id="@+id/viewSnap_indicator"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="44dp"
        android:src="@drawable/indicator_background"
        />

</FrameLayout>